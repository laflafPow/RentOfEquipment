<Window x:Class="RentOfEquipment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RentOfEquipment"
        mc:Ignorable="d"
        Title="Меню" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <TextBlock
                Text="Меню"
                FontSize="20"
                FontFamily="Century Gothic"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                Margin="0 40 0 0"/>

            <WrapPanel>
                <Button x:Name="btnEmployeesList"
                    Width="150"
                    Height="150"
                    Margin="330 50 0 0" 
                    Background="Black"
                    Content="Сотрудники" 
                    FontSize="14" 
                    FontFamily="Century Gothic" 
                        Click="btnEmployeeList_Click" BorderBrush="{x:Null}"               
                />

                <Button x:Name="btnClientList"
                    Width="150"
                    Height="150"
                    Margin="30 50 0 0"
                    Background="Black"
                    Content="Клиенты"
                    FontSize="14" 
                    FontFamily="Century Gothic" 
                    Click="btnClientList_Click" BorderBrush="{x:Null}"
                />
            </WrapPanel>

            <WrapPanel>
                <Button x:Name="btnEquipmentList"
                    Width="150"
                    Height="150"
                    Margin="330 50 0 0" 
                    Background="Black"
                    Content="Оборудование"
                    FontSize="14" 
                    FontFamily="Century Gothic" 
                    Click="btnEquipmentList_Click" BorderBrush="{x:Null}"   
                />

                <Button x:Name="btnRent"
                    Content="Аренда"
                    FontSize="14" 
                    FontFamily="Century Gothic" 
                    Width="150"
                    Height="150"
                    Margin="30 50 0 0"
                    Background="Black" Click="btnRent_Click" BorderBrush="{x:Null}"
                />
            </WrapPanel>

        </StackPanel>

    </Grid>
</Window>
